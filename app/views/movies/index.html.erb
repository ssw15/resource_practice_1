<div class="page-header">
  <h1>Movies</h1>
</div>

<p>
  <!-- <a href="<%= new_movie_url %>" class="btn btn-primary">Add a New Movie</a> -->
  <%= link_to "Add a New Movie", new_movie_url, :class => "btn btn-primary" %>
</p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Image</th>
      <th>Title</th>
      <th>Year</th>
      <th>Duration</th>
      <th>Description</th>
      <th>Director ID</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
    <tr>
      <td>
        <%= image_tag movie.image_url, :width => 80, :alt => movie.title %>
      </td>
      <td><%= movie.title %></td>
      <td><%= movie.year %></td>
      <td><%= movie.duration %></td>
      <td><%= movie.description %></td>
      <td><%= movie.director_id %></td>
      <td>
        <%= link_to "<i class=\"fa fa-search-plus\"></i>".html_safe,
                    movie_url(movie.id),
                    :class => "btn btn-primary" %>
      </td>
      <td>
        <%= link_to "<i class=\"fa fa-edit\"></i>".html_safe,
                    edit_movie_url(movie.id),
                    :class => "btn btn-warning" %>
      </td>
      <td>
        <%= link_to "<i class=\"fa fa-trash-o\"></i>".html_safe,
                    movie_url(movie.id),
                    :data => { :confirm => "Are you sure you want to delete this movie?" },
                    :class => "btn btn-danger",
                    :method => "delete" %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

