<div class="page-header">
  <h1>Movie #<%= @movie.id %></h1>
</div>

<%= link_to "Back", movies_url, :class => "btn btn-primary" %>
<%= link_to "Edit", edit_movie_url(@movie.id), :class => "btn btn-warning" %>
<%= link_to "Delete", movie_url(@movie.id), :class => "btn btn-danger", :method => "delete" %>

<dl class="dl-horizontal">
  <dt>Title</dt>
  <dd><%= @movie.title %></dd>

  <dt>Year</dt>
  <dd><%= @movie.year %></dd>

  <dt>Duration</dt>
  <dd><%= @movie.duration %></dd>

  <dt>Description</dt>
  <dd><%= @movie.description %></dd>

  <dt>Director ID</dt>
  <dd><%= @movie.director_id %></dd>

  <dt>Image</dt>
  <dd><img src="<%= @movie.image_url %>" width="320"></dd>


</dl>
